{
  "name": "taskmanager",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "start": "bun run index.ts",
    "codegen": "graphql-codegen --config codegen.yml",
    "format": "prettier --write \"src/**/*.ts\" \"*.{js,ts,json,md}\" ",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint": "eslint . --ext .ts",
    "typecheck": "bun run --bun tsc --pretty --tsBuildInfoFile node_modules/.cache/tsconfig.tsBuildInfo",
    "commitlint": "commitlint --edit",
    "prepare": "husky"
  },
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^5.0.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "apollo-server-express": "^3.13.0",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "graphql": "^16.11.0",
    "husky": "^9.1.7"
  }
}
